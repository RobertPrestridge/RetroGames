@{
    ViewData["Title"] = "Game Select";
}

@* Background partial views â€” rendered behind main content *@
<div id="bgContainer">
    @await Html.PartialAsync("_BgNeonSkyline")
    @await Html.PartialAsync("_BgNeonRain")
    @await Html.PartialAsync("_BgMarqueeCity")
    @await Html.PartialAsync("_BgPixelCity")
    @await Html.PartialAsync("_BgFloatingGeometry")
    @await Html.PartialAsync("_BgNeonAlley")
</div>

<div class="text-center mt-5 portal-content">
    <h1 class="retro-title">MULTIPLAYER ARCADE</h1>
    <hr class="retro-divider" />
    <p class="retro-subtitle mt-4">SELECT YOUR GAME</p>

    <div class="game-select-grid mt-5">
        <a href="/tictactoe" class="game-card">
            <div class="game-card-icon">&#10006;&#9898;</div>
            <div class="game-card-title">TIC TAC TOE</div>
            <div class="game-card-desc">CLASSIC 2-PLAYER BATTLE</div>
        </a>

        <a href="/tron" class="game-card game-card-tron">
            <div class="game-card-icon game-card-icon-tron">&#9655;&#9655;</div>
            <div class="game-card-title">TRON LIGHT CYCLES</div>
            <div class="game-card-desc">ENTER THE GRID</div>
        </a>
    </div>

    <p class="retro-subtitle mt-5" style="font-size: 0.5rem; color: #555;">SELECT A GAME TO BEGIN</p>
</div>

@* Background switcher button *@
<div class="bg-switcher">
    <button id="bgSwitchBtn" class="bg-switch-btn" title="Change Background">
        <span class="bg-switch-icon">&#9670;</span>
        <span class="bg-switch-label" id="bgSwitchLabel">SKYLINE</span>
    </button>
</div>

@section Styles {
    <style>
        .portal-content {
            position: relative;
            z-index: 1;
        }

        .game-select-grid {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .game-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 220px;
            height: 220px;
            background: rgba(18, 18, 42, 0.85);
            border: 3px solid var(--neon-cyan);
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.3), inset 0 0 15px rgba(0, 255, 255, 0.05);
            padding: 1.5rem;
            text-decoration: none;
            transition: all 0.2s ease;
            backdrop-filter: blur(2px);
        }

        .game-card:hover {
            border-color: #fff;
            box-shadow: 0 0 25px rgba(0, 255, 255, 0.5), inset 0 0 25px rgba(0, 255, 255, 0.1);
            transform: scale(1.05);
            text-decoration: none;
        }

        .game-card-locked {
            border-color: var(--retro-border);
            box-shadow: none;
            opacity: 0.4;
            cursor: default;
        }

        .game-card-locked:hover {
            border-color: var(--retro-border);
            box-shadow: none;
            transform: none;
        }

        .game-card-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--neon-cyan);
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.7);
        }

        .game-card-locked .game-card-icon {
            color: var(--retro-border);
            text-shadow: none;
        }

        .game-card-title {
            font-family: 'Press Start 2P', monospace;
            font-size: 0.7rem;
            color: var(--neon-yellow);
            margin-bottom: 0.5rem;
        }

        .game-card-locked .game-card-title {
            color: #555;
        }

        .game-card-desc {
            font-family: 'Press Start 2P', monospace;
            font-size: 0.45rem;
            color: var(--text-color);
            line-height: 1.8;
        }

        .game-card-tron {
            border-color: var(--neon-pink);
            box-shadow: 0 0 15px rgba(255, 0, 255, 0.3), inset 0 0 15px rgba(255, 0, 255, 0.05);
        }

        .game-card-tron:hover {
            border-color: #fff;
            box-shadow: 0 0 25px rgba(255, 0, 255, 0.5), inset 0 0 25px rgba(255, 0, 255, 0.1);
        }

        .game-card-icon-tron {
            color: var(--neon-pink);
            text-shadow: 0 0 10px rgba(255, 0, 255, 0.7);
        }

        /* Background scene visibility */
        .bg-scene {
            display: none;
        }
        .bg-scene.active {
            display: block;
        }

        /* Background switcher button */
        .bg-switcher {
            position: fixed;
            bottom: 1.2rem;
            right: 1.2rem;
            z-index: 100;
        }

        .bg-switch-btn {
            background: rgba(18, 18, 42, 0.9);
            border: 2px solid var(--neon-cyan);
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
            color: var(--neon-cyan);
            font-family: 'Press Start 2P', monospace;
            font-size: 0.4rem;
            padding: 0.5rem 0.75rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            transition: all 0.2s ease;
        }

        .bg-switch-btn:hover {
            border-color: #fff;
            color: #fff;
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
            transform: scale(1.05);
        }

        .bg-switch-icon {
            font-size: 0.6rem;
            animation: icon-spin 4s linear infinite;
        }

        @@keyframes icon-spin {
            from { transform: rotate(0deg); }
            to   { transform: rotate(360deg); }
        }

        @@media (max-width: 576px) {
            .bg-switch-btn {
                font-size: 0.3rem;
                padding: 0.4rem 0.6rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        (function() {
            var scenes = [
                { id: 'bgNeonSkyline',      label: 'SKYLINE' },
                { id: 'bgNeonRain',          label: 'RAIN' },
                { id: 'bgMarqueeCity',       label: 'MARQUEE' },
                { id: 'bgPixelCity',         label: 'PIXEL' },
                { id: 'bgFloatingGeometry',  label: 'GEOMETRY' },
                { id: 'bgNeonAlley',         label: 'ALLEY' }
            ];

            var storageKey = 'arcadeBgIndex';
            var current = parseInt(localStorage.getItem(storageKey)) || 0;
            if (current < 0 || current >= scenes.length) current = 0;

            var btn = document.getElementById('bgSwitchBtn');
            var label = document.getElementById('bgSwitchLabel');

            function showScene(index) {
                for (var i = 0; i < scenes.length; i++) {
                    var el = document.getElementById(scenes[i].id);
                    if (el) {
                        if (i === index) {
                            el.classList.add('active');
                        } else {
                            el.classList.remove('active');
                        }
                    }
                }
                if (label) label.textContent = scenes[index].label;
                localStorage.setItem(storageKey, index);
            }

            // Show initial scene
            showScene(current);

            // Cycle on click
            if (btn) {
                btn.addEventListener('click', function() {
                    current = (current + 1) % scenes.length;
                    showScene(current);
                });
            }
        })();
    </script>
}
