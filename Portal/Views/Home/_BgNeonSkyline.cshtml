</div>

<style>
    .bg-neon-skyline {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        z-index: -1;
        overflow: hidden;
        background: linear-gradient(180deg, #050510 0%, #0a0a2e 40%, #0f0f1a 100%);
    }

    .skyline-stars {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 60%;
        background-image:
            radial-gradient(1px 1px at 10% 15%, rgba(255,255,255,0.6), transparent),
            radial-gradient(1px 1px at 25% 30%, rgba(255,255,255,0.4), transparent),
            radial-gradient(1px 1px at 40% 10%, rgba(255,255,255,0.5), transparent),
            radial-gradient(1px 1px at 55% 25%, rgba(255,255,255,0.3), transparent),
            radial-gradient(1px 1px at 70% 5%, rgba(255,255,255,0.6), transparent),
            radial-gradient(1px 1px at 85% 20%, rgba(255,255,255,0.4), transparent),
            radial-gradient(1px 1px at 15% 45%, rgba(255,255,255,0.5), transparent),
            radial-gradient(1px 1px at 60% 40%, rgba(255,255,255,0.3), transparent),
            radial-gradient(1px 1px at 90% 35%, rgba(255,255,255,0.5), transparent),
            radial-gradient(1px 1px at 5% 50%, rgba(255,255,255,0.4), transparent),
            radial-gradient(1px 1px at 33% 8%, rgba(255,255,255,0.5), transparent),
            radial-gradient(1px 1px at 78% 42%, rgba(255,255,255,0.3), transparent);
    }

    .skyline-buildings {
        position: absolute;
        bottom: 0; left: 0; width: 100%; height: 45%;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        gap: 0;
    }

    .building {
        background: #08081a;
        border-top: 2px solid rgba(0,255,255,0.15);
        position: relative;
        flex-shrink: 0;
    }

    .b1 { width: 8%; height: 55%; }
    .b2 { width: 10%; height: 75%; }
    .b3 { width: 6%; height: 45%; }
    .b4 { width: 12%; height: 85%; }
    .b5 { width: 7%; height: 50%; }
    .b6 { width: 9%; height: 65%; }
    .b7 { width: 11%; height: 90%; }
    .b8 { width: 8%; height: 55%; }

    .neon-sign {
        position: absolute;
        top: 15%;
        left: 50%;
        transform: translateX(-50%);
        font-family: 'Press Start 2P', monospace;
        font-size: 0.4rem;
        letter-spacing: 1px;
        white-space: nowrap;
    }

    .sign-pink {
        color: var(--neon-pink);
        text-shadow: 0 0 5px var(--neon-pink), 0 0 15px var(--neon-pink), 0 0 30px rgba(255,0,255,0.4);
        animation: flicker-pink 3s ease-in-out infinite;
    }

    .sign-cyan {
        color: var(--neon-cyan);
        text-shadow: 0 0 5px var(--neon-cyan), 0 0 15px var(--neon-cyan), 0 0 30px rgba(0,255,255,0.4);
        animation: flicker-cyan 4s ease-in-out infinite;
    }

    .sign-yellow {
        color: var(--neon-yellow);
        text-shadow: 0 0 5px var(--neon-yellow), 0 0 15px var(--neon-yellow), 0 0 30px rgba(255,255,0,0.4);
        animation: flicker-yellow 5s ease-in-out infinite;
    }

    .b1 .neon-sign { animation-delay: 0s; }
    .b2 .neon-sign { animation-delay: 0.7s; }
    .b3 .neon-sign { animation-delay: 1.5s; }
    .b4 .neon-sign { animation-delay: 0.3s; }
    .b5 .neon-sign { animation-delay: 2.1s; }
    .b6 .neon-sign { animation-delay: 1.0s; }
    .b8 .neon-sign { animation-delay: 1.8s; }

    @@keyframes flicker-pink {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
            opacity: 1;
            text-shadow: 0 0 5px var(--neon-pink), 0 0 15px var(--neon-pink), 0 0 30px rgba(255,0,255,0.4);
        }
        20%, 24%, 55% {
            opacity: 0.4;
            text-shadow: none;
        }
    }

    @@keyframes flicker-cyan {
        0%, 40%, 42%, 44%, 70%, 72%, 100% {
            opacity: 1;
            text-shadow: 0 0 5px var(--neon-cyan), 0 0 15px var(--neon-cyan), 0 0 30px rgba(0,255,255,0.4);
        }
        41%, 43%, 71% {
            opacity: 0.3;
            text-shadow: none;
        }
    }

    @@keyframes flicker-yellow {
        0%, 30%, 32%, 60%, 62%, 64%, 100% {
            opacity: 1;
            text-shadow: 0 0 5px var(--neon-yellow), 0 0 15px var(--neon-yellow), 0 0 30px rgba(255,255,0,0.4);
        }
        31%, 61%, 63% {
            opacity: 0.5;
            text-shadow: none;
        }
    }

    @@media (max-width: 576px) {
        .neon-sign { font-size: 0.25rem; }
        .skyline-buildings { height: 35%; }
    }
</style>
